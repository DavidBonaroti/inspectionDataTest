<div class="jumbrotron text-center">
  <h4><%= greeting %></h4>
</div>

<div class="select-menu">
  <form method="GET" action="/data">
  <label>Select Cuisine</label>
  <select class="selectpicker" name="select_cuisine" id="select_cuisine">
    <option value="Chinese">Chinese</option>
    <option value="American">American</option>
    <option value="Caribbean">Caribbean</option>
    <option value="Irish">Irish</option>
    <option value="Creole">Creole</option>
    <option value="Pizza">Pizza</option>
  </select>
  <label>Select Boro</label>
  <select class="selectpicker" name="select_boro" id="select_boro">
    <option value="MANHATTAN">Manhattan</option>
    <option value="BROOKLYN">Brooklyn</option>
    <option value="BRONX">Bronx</option>
    <option value="QUEENS">Queens</option>
    <option value="STATEN ISLAND">Staten Island</option>
  </select>
  <label>Select Grade</label>
  <select class="selectpicker" name="select_grade" id="select_grade">
    <option value="A">A</option>
    <option value="B">B</option>
    <option value="C">C</option>
  </select>

  <input type="submit" value="Search" />
  </form>
</div>


<div class="table_data">
  <table class="table table-bordered table-hover table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Cuisine</th>
        <th>Street</th>
        <th>Boro</th>
        <th>Score</th>
        <th>Grade</th>
      </tr>
    </thead>

    <tbody>

      <% for (i = 0; i < 5; i++) { %>
        <tr>
          <td><%= datas[i].DBA %></td>
          <td><%= datas[i].CUISINE_DESCRIPTION %></td>
          <td><%= datas[i].STREET %></td>
          <td><%= datas[i].BORO %></td>
          <td><%= datas[i].SCORE %></td>
          <td><%= datas[i].GRADE %></td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>
